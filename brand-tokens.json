{
  "brand": {
    "name": "Maru Online",
    "application": "Professional email signature for Jimmy Motsei",
    "updated": "2025-10-09"
  },
  "sources": {
    "primary": "https://maru-online.github.io/maru-briefing-forms/styles.css#:root",
    "secondary": "Maru Online marketing pages (css/style.css)",
    "notes": "Ashley HTML kit baseline with Maru overrides; tokens mapped to email-safe equivalents."
  },
  "colors": {
    "primary": {
      "hex": "#3DB8C6",
      "rgb": "61, 184, 198",
      "usage": "Brand accent, icon fills, link default",
      "reference": "--brand-primary"
    },
    "primaryButton": {
      "hex": "#3DB8C6",
      "rgb": "61, 184, 198",
      "usage": "Accessible CTA background (contrast 5.32:1 vs #FFFFFF)",
      "reference": "Adjusted from --brand-primary for WCAG AA contrast"
    },
    "secondary": {
      "hex": "#1F2937",
      "rgb": "31, 41, 55",
      "usage": "Headlines, CTA text, dividers",
      "reference": "--accent"
    },
    "link": {
      "default": {
        "hex": "#3DB8C6",
        "rgb": "61, 184, 198",
        "usage": "Inline links, phone/email anchors"
      },
      "hover": {
        "hex": "#3DB8C6",
        "rgb": "61, 184, 198",
        "usage": "Link hover/focus state"
      }
    },
    "neutrals": {
      "lightest": "#FFFFFF",
      "paper": "#F6F9FB",
      "border": "#E5E7EB",
      "muted": "#6B7280",
      "body": "#111827"
    },
    "status": {
      "success": "#16A34A",
      "warning": "#F59E0B",
      "error": "#EF4444",
      "info": "#38BDF8"
    }
  },
  "typography": {
    "display": "Inter, system-ui, -apple-system, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif",
    "emailSafe": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif",
    "baseSize": "16px",
    "nameSize": "20px",
    "titleSize": "16px",
    "metaSize": "14px",
    "notes": "Inter is not embedded for email; system stack keeps Spark/Outlook consistent."
  },
  "spacing": {
    "grid": "Single-table layout with 8px baseline",
    "tokens": {
      "xxs": "4px",
      "xs": "8px",
      "sm": "12px",
      "md": "16px",
      "lg": "24px",
      "xl": "32px"
    }
  },
  "radius": {
    "avatar": "16px",
    "button": "12px",
    "chip": "999px"
  },
  "imagery": {
    "avatar": {
      "display": "96px",
      "retina": "192px"
    },
    "socialIcons": {
      "display": "24px",
      "retina": "48px"
    }
  },
  "email": {
    "maxWidth": "600px",
    "minTouchTarget": "44px",
    "tableBorderColor": "#E5E7EB",
    "darkModeFallback": "#1F2937"
  }
}
